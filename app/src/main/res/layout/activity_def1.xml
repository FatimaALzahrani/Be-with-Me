<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:textDirection="ltr"
    android:layoutDirection="ltr"
    android:background="#FFF9F2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="740dp"
        android:src="@drawable/islamic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تخطِّ"
                android:onClick="toLogin"
                android:gravity="start"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="end"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="1/3" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:src="@drawable/kaba" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نحسِّن"
            android:layout_gravity="center"
            android:layout_marginTop="-120dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تجربة المسلم الكفيف لآداء مناسك العمرة والحج بأيسر الطرق وأسهلها"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="-10dp"
            android:textColor="#A8A8A9"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="-10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="التالي"
                android:onClick="toDef2"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#8A704D"
                android:textStyle="bold"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_point" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_point" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/long_point" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#C4C4C4"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
